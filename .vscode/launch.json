   "version": "0.2.0",
   "configurations": [
      {
         "type": "node",
         "request": "launch",
         "cwd": "${workspaceFolder}/test",
         "name": "Unit: Build resources",
         "preLaunchTask": "Clean tests",
         "program": "${workspaceFolder}/test/server/build.js",
         "internalConsoleOptions": "openOnSessionStart"
      },
      {
         "type": "node",
         "request": "launch",
         "name": "Unit: Run all tests [Node]",
         "cwd": "${workspaceFolder}/test",
         "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
         "args": [
            "-u",
            "bdd",
            "--colors",
            "mocha-require.js",
            "--test=all"
         ],
         "internalConsoleOptions": "openOnSessionStart"
      },
      {
         "type": "node",
         "request": "launch",
         "name": "Unit: Run current test [Node]",
         "cwd": "${workspaceFolder}/test",
         "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
         "args": [
            "-u",
            "bdd",
            "--colors",
            "mocha-require.js",
            "--test=${file}"
         ],
         "internalConsoleOptions": "openOnSessionStart"
      }
   ]
}